{
  "name": "dataDouble",
  "version": "1.5",
  "description": "dataDouble Browser Extension",
  "icons": {
    "48": "icons/dd-icon-48.png",
    "96": "icons/dd-icon-96.png"
  },
  "applications": {
    "gecko": {
      "id": "roopa.vasudevan@gmail.com",
      "strict_min_version": "53.0"
    }
  },
  "permissions": ["activeTab", "storage", "downloads"],
  "background": {
      "scripts": ["js/background.js"],
      "persistent": true
    },
  "browser_action": {
      "browser_style": true,
      "default_icon": {
        "16": "icons/dd-icon-16.png",
        "32": "icons/dd-icon-32.png"
      }
    },
    "sidebar_action": {
        "default_icon": "icons/dd-icon-96.png",
        "default_panel": "popup.html",
        "default_title": "dataDouble"
      },
  "content_scripts": [
      {
      "matches": [
          "http://*/*",
          "https://*/*"
          ],
      "js": ["js/context.js"],
      "run_at": "document_end"
      }
  ],
  "manifest_version": 2
}
